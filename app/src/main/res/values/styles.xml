<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppEditTextStyle">
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="AppButtonPrimary" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAppearance">@style/AppTextTitle.S16.Bold</item>
        <item name="android:background">@drawable/selector_button_background</item>
    </style>

    <style name="AppTextTitle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTextTitle.S42">
        <item name="android:textSize">42sp</item>
    </style>

    <style name="AppTextTitle.S16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTextTitle.S16.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTextTitle.S42.Bold">
        <item name="android:textStyle">bold</item>
    </style>

</resources>